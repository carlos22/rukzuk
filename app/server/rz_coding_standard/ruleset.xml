<?xml version="1.0"?>
<ruleset name="rz_standard">
  <description>The rukzuk PSR-2 coding standard.</description>

  <!-- Ignore orm proxy directory -->
  <exclude-pattern>*/Orm/Proxies/*</exclude-pattern>
  <!-- Ignore translation directory -->
  <exclude-pattern>*/locale/translations/*</exclude-pattern>
  <!-- Ignore test directory -->
  <exclude-pattern>*/tests/*</exclude-pattern>
  <!-- Ignore composer directory -->
  <exclude-pattern>*/vendor/*</exclude-pattern>

  <!-- Include the whole PSR-2 standard -->
  <rule ref="PSR2"/>

  <!-- Code MUST use an indent of 2 spaces. -->
  <rule ref="Generic.WhiteSpace.ScopeIndent">
    <properties>
      <property name="indent" value="2"/>
    </properties>
  </rule>
</ruleset>
